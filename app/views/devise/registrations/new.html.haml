.col-lg-offset-3.col-md-offseet-3.col-sm-offset-3.col-lg-6.col-md-6.col-sm-6.col-xs-12
  %h2.title Регистрация
  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    = devise_error_messages!
    .field
      = f.label :name, 'Как вас зовут?'
      %br/
      = f.text_field :name, autofocus: true, class: "form-control"
    .field
      = f.label :email, "Ваш адрес электронной почты"
      %br/
      = f.email_field :email, class: "form-control"
    .field
      = f.label :password, "Ваш пароль"
      - if @minimum_password_length
        %em
          (#{@minimum_password_length} символов минимум)
      %br/
      = f.password_field :password, autocomplete: "off", class: "form-control"
    .field
      = f.label :password_confirmation, "Повторите ввод пароля"
      %br/
      = f.password_field :password_confirmation, autocomplete: "off", class: "form-control"
    %br/
    .actions.title
      = f.submit "Зарегистрироваться", class: "btn btn-success"