.col-lg-offset-2.col-sm-offset-1.col-md-offseet-1.col-lg-8.col-sm-10.col-md-10.col-xs-12
  = form_for(@park) do |f|
    - if @park.errors.any?
      #error_explanation
        %h2
          = pluralize(@park.errors.count, "error")
          prohibited this park from being saved:
        %ul
          - @park.errors.full_messages.each do |message|
            %li= message
    .field
      = f.label :address, 'Адрес и/или название, как на карте'
      %br/
      = f.text_area :address, cols: 30, rows: 3, class: "form-control"
    .field
      = f.label :latitude, 'Широта (автоматически)'
      %br/
      = f.text_field :latitude, class: "form-control"
    .field
      = f.label :longitude, 'Долгота (автоматически)'
      %br/
      = f.text_field :longitude, class: "form-control"
    .field
      = f.label :description, 'Описание места'
      %br/
      = f.text_area :description, cols: 30, rows: 10, class: "form-control"
    .actions
      = link_to 'Back', parks_path, class: "btn btn-danger"
      = f.submit 'Сохранить страницу парка', class: "btn btn-success"
