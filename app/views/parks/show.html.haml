%h2.title= @park.address

.col-lg-9.col-sm-9.col-md-9.col-xs-12
	#map

.col-lg-3.col-sm-3.col-md-3.col-xs-12
	= link_to 'Править', edit_park_path(@park), class: "btn btn-success"
	= link_to 'На главную', parks_path, class: "btn btn-default"
	%p#notice= notice

:javascript
	handler = Gmaps.build('Google');
	handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
		markers = handler.addMarkers(#{raw @hash.to_json});
		handler.bounds.extendWith(markers);
		handler.fitMapToBounds();
		handler.getMap().setZoom(16);
	});

